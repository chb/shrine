<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Servlets -->
  
  <servlet>
    <servlet-name>ontSearchServlet</servlet-name>
    <servlet-class>net.shrine.webclient.server.OntologySearchServiceImpl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>queryServlet</servlet-name>
    <servlet-class>net.shrine.webclient.server.QueryServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ontSearchServlet</servlet-name>
    <url-pattern>/Webclient/ontology</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>queryServlet</servlet-name>
    <url-pattern>/Webclient/query</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Webclient.html</welcome-file>
  </welcome-file-list>

</web-app>
