<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/net/shrine/webclient/server/clientApplicationContext.xml</param-value>
    </context-param>
    
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    
    <filter>
        <filter-name>versionCookieSettingFilter</filter-name>
        <filter-class>net.shrine.webclient.server.VersionCookieSettingServletFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>versionCookieSettingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>

    <!-- Servlets -->

    <servlet>
    	<servlet-name>Shrine Web Client Rest Service</servlet-name>
    	<servlet-class>com.sun.jersey.spi.spring.container.servlet.SpringServlet</servlet-class>
    	<init-param>
    		<param-name>com.sun.jersey.config.property.packages</param-name>
    		<param-value>net.shrine.webclient.server</param-value>
    	</init-param>
    	<load-on-startup>1</load-on-startup>
      </servlet>
    
      <servlet-mapping>
    	<servlet-name>Shrine Web Client Rest Service</servlet-name>
    	<url-pattern>/Webclient/rest/*</url-pattern>
      </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
    <welcome-file>Webclient.html</welcome-file>
  </welcome-file-list>

</web-app>
