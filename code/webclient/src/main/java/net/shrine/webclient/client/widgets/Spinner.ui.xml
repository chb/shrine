<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.forcedInline { display: inline; }
		.forcedBlock { display: block; }
	</ui:style>
	
	<g:HorizontalPanel addStyleNames="{style.forcedInline}">
		<g:IntegerBox ui:field="textBox" />
		<g:FlowPanel>
			<g:Image ui:field="upArrow" url="images/arrowUp.png"/>
			<g:Image ui:field="downArrow" url="images/arrowDown.png" addStyleNames="{style.forcedBlock}"/>
		</g:FlowPanel>
	</g:HorizontalPanel>
</ui:UiBinder>