<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .loading {
        	width: 100%;
        	height: 100%;
        	z-index: 100;
        	background: url(images/loading-bg-white.png);
        	position: absolute;
        	left: 0;
        	top: 0;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.loading}" id="loadingPanel">
        <div style="margin: 350px auto 0 auto; width: 64px; height: 64px;">
            <img width="64" height="64" alt="loading" src="images/loading5.gif" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 